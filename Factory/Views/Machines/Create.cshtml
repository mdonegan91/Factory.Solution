@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.MachineName)
    @Html.TextBoxFor(model => model.MachineName)

    @Html.LabelFor(model => model.Details)
    @Html.TextBoxFor(model => model.Details)
    
    @Html.Label("Add an engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Add new Machine" class="btn btn-default" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Machines", "Index")</p>
</div>