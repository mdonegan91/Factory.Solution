@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>

@using (Html.BeginForm())
{
    <p>Machine Name: @Html.TextBoxFor(model => model.MachineName)

    Machine Details @Html.TextBoxFor(model => model.Details)

    <input type="submit" value="Add new Machine"/></p>
}

<p>@Html.ValidationMessageFor(model => model.MachineName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Machines", "Index")</p>
</div>