@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Specialties</h1>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
} 

<ul>
  @foreach(Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add new Specialty", "Create") | @Html.ActionLink("Add new Engineer", "Create", "Engineers")</p>
</div>