@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a specialty</h2>

<h4>Add a specialty to this engineer's expertise: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select specialty:")
    @Html.DropDownList("SpecialtyId")

    <input type="submit" value="Save" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Engineers", "Index")</p>
</div>