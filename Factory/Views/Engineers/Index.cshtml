@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}
else
{
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId }) | 
      @foreach(EngineerSpecialty join in engineer.JoinEntities2)
      {
        @Html.ActionLink($"{join.Specialty.SpecialtyName}", "Details", "Specialties", new {id = join.Specialty.SpecialtyId} )
      }
    </li>
  }
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add new Engineer", "Create")</p>
</div>